{% layout "layout.liquid" %}
{% block content %}

<div>
    <a href="/fruits/new"><button>Create a New Fruit</button></a> <!-- Place button on top of loop -->
    <a href="/user/logout"><button>Logout</button></a>
    {% for fruit in fruits %}
        <article>
        <a href="/fruits/{{ fruit._id }}"> <!-- Use "_id" and NOT "index" -->
            <h2>
            {{fruit.name}} - 
                {% if fruit.readyToEat == true %}
                        Ripe
                {% else %}
                    Not Ripe
                {% endif %}
            </h2>
        </a>
</article>
{% endfor %}


</div>

{% endblock %}